<!DOCTYPE html>
<html>
  <head>
    <title>Music</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <section class="log-in-box">
        <% if current_user %>
          <span class="log-in-welcome"> Hello, <%= current_user.email %>! </span>
          <form class="button" action="<%=session_url%>" method="post">
            <input type="hidden" name="_method" value="DELETE">
            <input type="hidden" name="authenticity_token" value="form_authenticity_token">
            <input type="submit" value="Sign Out">
          </form>
        <% else %>
          <span class="log-in-welcome">Hello, stranger!</span>
          <a class="button" href="<%= new_session_url %>">Sign In</a>
          <a class="button" href="<%= new_user_url %>">Sign Up</a>
        <% end %>
      </section>
    </header>


    <%= yield %>
  </body>
</html>
